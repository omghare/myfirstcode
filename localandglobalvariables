#include<iostream>
using namespace std;
int c=6;  //global variable c declared
int main()
{
    int a,b,c;
    cout<<"Enter the value of a:";
    cin>>a;
    cout<<"Enter the value of b:";
    cin>>b;
    c=a+b;
    cout<<"Addition of "<<a<<" and "<<b<<" is "<<c<<endl;
    cout<<"\nlocal c is "<<c<<endl;
    cout<<"\nglobal c is "<<::c<<endl;  // ::is used to define the scope of a variable, here c is a global variable
}
